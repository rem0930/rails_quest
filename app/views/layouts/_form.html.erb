<%= form_for article do |f| %>
    <fieldset>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control form-control-lg" %>
    </fieldset>
    <fieldset>
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
    </fieldset>
    <fieldset>
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control", rows: 8 %>
    </fieldset>
    <fieldset>
        <%= f.label :tag_list %>
        <%= f.text_field :tag_list, class: "form-control" %>
    </fieldset>
    <%= f.submit "Update Article", class: "btn btn-lg pull-xs-right btn-primary" %>
<% end %>